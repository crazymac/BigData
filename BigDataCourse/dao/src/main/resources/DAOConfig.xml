<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation=" http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="constants" class="com.mirantis.aminakov.bigdatacourse.dao.cassandra.Constants" >
    	<constructor-arg type = "java.lang.String" value="Test Cluster" />
        <constructor-arg type = "java.lang.String" value="Bookshelf"/>
        <constructor-arg type = "java.lang.String" value="Books"/>
        <constructor-arg type = "java.lang.String" value="localhost"/>
	</bean>	
	
	<bean id="cassandra" class="com.mirantis.aminakov.bigdatacourse.dao.cassandra.DAOApp" >
    	<constructor-arg> <ref bean="constants"/></constructor-arg>
	</bean>	
	
	<bean id = "DaoJdbc" class = "com.mirantis.aminakov.bigdatacourse.dao.DaoJdbc"/>
	
</beans>
